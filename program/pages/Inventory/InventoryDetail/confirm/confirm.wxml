<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">状态</view>
    <view class="weui-cell__ft">{{checkdata.status==0?'待处理':(checkdata.status==1?'正常':'异常')}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">资产编号</view>
    <view class="weui-cell__ft">{{goods.goodsNum}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">资产类别</view>
    <view class="weui-cell__ft">{{goods.goodsType}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">资产名称</view>
    <view class="weui-cell__ft">{{goods.goodsName}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">标准型号</view>
    <view class="weui-cell__ft">{{goods.standardModel}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">规格型号</view>
    <view class="weui-cell__ft">{{goods.specsModel}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">计量单位</view>
    <view class="weui-cell__ft">{{goods.meteringUnit}}</view>
  </view>
</view>


