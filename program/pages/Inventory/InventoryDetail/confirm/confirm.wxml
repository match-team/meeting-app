<view class="weui-cells__title">指定部门</view>
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell">
    <view class="weui-cell__bd">所属公司</view>
    <view class="weui-cell__ft">{{applyRecord.company}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">使用部门</view>
    <view class="weui-cell__ft">{{applyRecord.department}}</view>
  </view>
  <view class="weui-cell">
    <view class="weui-cell__bd">使用人</view>
    <view class="weui-cell__ft">{{applyRecord.ownerId}}</view>
  </view>
  
</view>
<view class="confirm_btn" hidden="{{buttonHiddle}}">
  <button type="primary" bindtap="detailHandle" data-status='1'>确认</button>
  <button type="warn"  bindtap="detailHandle" data-status='2'>异常</button>
</view>          
<view class="confirm_btn" hidden="{{!buttonHiddle}}">
  <button type="primary" bindtap="goback" >返回</button>
</view> 