.panel__bd{
  display: flex;
  justify-content: space-around;
  text-align: center;
  padding: 20px 0;
  border: 1px solid #e9e9e9;
}
.panel__bd_icon{
  display: flex;

}
.panel__bd view view:first-child{
  color:#999;
}
.panel__datewrap{
  padding: 20px;
}
.panel_date{
  padding:0 20px ;
  position: relative;
  border-left: 1px dashed #ccc;
}
.panel__circle{
  position: absolute;
  width: 10px;
  height: 10px;
  border-radius: 50%;
  border:2px solid #4472c4;
  left: -7px;
  background-color: #fff;

}
